<%= link_to 'Back', flats_path %>

<h1>New flat</h1>

<p>
  <%= error_messages_for 'flat' %>
</p>

<%= form_tag({:action => 'new'}, :method => :get) do %>
  <p>
    <%= label_tag :url, "URL for prefilling the form (optional):" %><br />
    <%= text_field_tag :url, {}, { :style => 'width: 800px'} %>
  </p>
  
  <p>
    <%= submit_tag 'Continue' %>
  </p>
<% end %>