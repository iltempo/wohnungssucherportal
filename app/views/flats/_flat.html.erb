<%= link_to(h(flat.street), flat, :class => "street-name") %>, <%= flat.neighbourhood %>
<%= image_tag 'http://www.wg-gesucht.de/favicon.ico' if flat.scraped? %>
<small><%= link_to 'edit', edit_flat_path(flat) %></small>
<br />
<b><%= flat.square_meters %></b>m², 
<b><%= number_to_currency(flat.price, :unit => '€', :precision => 0) %></b>,
<% if flat.rooms %>
  <b><%= flat.rooms %></b> rooms,
<% end %>
<b><%= number_to_currency(flat.square_meter_price, :unit => '€', :separator => ",", :precision => 0) %></b>/m²

<% if show_phone %>
  - Phone: <%=raw flat.phone.blank? ? "<b style='color:#d00'><i>missing</i></b>" : flat.phone %>
<% end %>

<b><%= priority_as_number(flat) %></b>